<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
    >


        <ImageView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:id="@+id/fotoImageViewMatch"
                android:src="@drawable/matchbkb"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_image"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nameMatch"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nameTeamAMatch"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_below="@id/tv_nameMatch"
                android:textSize="10sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pointsTeamAMatch"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_below="@id/tv_nameTeamAMatch"
                android:textSize="10sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nameTeamBMatch"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_below="@id/tv_nameTeamAMatch"
                android:textSize="10sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pointsTeamBMatch"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_below="@id/tv_nameTeamBMatch"
                android:textSize="10sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dateMatch"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_below="@id/tv_nameTeamBMatch"
                android:textSize="10sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_timeMatch"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_below="@id/tv_dateMatch"
                android:textSize="10sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_win"
                android:layout_toRightOf="@id/fotoImageViewMatch"
                android:layout_below="@id/tv_timeMatch"
                android:textSize="10sp"
        />



    </RelativeLayout>


</androidx.cardview.widget.CardView>